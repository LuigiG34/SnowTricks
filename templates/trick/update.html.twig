{% extends 'base.html.twig' %}

{% block title %}Trick - Update
	{{ trick.name }}
{% endblock %}

{% block body %}

	<div class="container-fluid p-5">
		<div class="container">
			<div class="row">

				<div class="col d-flex align-items-center justify-content-center gap-1 flex-row">
					{% for image in trick.images %}
						<div>
							<img height="100px" src="{{ image.path }}">
							<div class="w-100 d-flex align-items-center justify-content-center gap-1">
								<a class="btn btn-dark" href="{{ path('app_edit_trick', {slug: trick.slug}) }}">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal{{ trick.id }}">
									<i class="bi bi-trash-fill"></i>
								</button>
							</div>
						</div>
					{% endfor %}
				</div>

				<div class="col d-flex align-items-center justify-content-center gap-1 flex-row">
					{% for video in trick.videos %}
						<div>
							<iframe width="100%" height="100px" src="{{ video.link }}"></iframe>
							<div class="w-100 d-flex align-items-center justify-content-center gap-1">
								<a class="btn btn-dark" href="{{ path('app_edit_trick', {slug: trick.slug}) }}">
									<i class="bi bi-pencil-fill"></i>
								</a>
								<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal{{ trick.id }}">
									<i class="bi bi-trash-fill"></i>
								</button>
							</div>
						</div>
					{% endfor %}
				</div>

			</div>

			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.description) }}
			{{ form_row(form.category) }}
			<div class="d-flex align-items-center justify-content-end flex-row w-100 mt-1">
				<button type="submit" class="btn btn-dark">Save</button>
			</div>
			{{ form_end(form) }}

		</div>
	</div>

{% endblock %}
